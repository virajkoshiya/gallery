<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainvid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".play_video">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

    </VideoView>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <SeekBar
            android:id="@+id/seekbrightness"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:rotation="270" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekvolume"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:rotation="270"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/seekk"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Current time"></TextView>

            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text="Total time"></TextView>

        </LinearLayout>


        <SeekBar
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="10dp"></SeekBar>

        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backward"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:onClick="pause"
                android:src="@drawable/backward"></ImageView>

            <ImageView
                android:id="@+id/restart"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:onClick="restart"
                android:src="@drawable/ic_baseline_restart_24"></ImageView>

            <ImageView
                android:id="@+id/play"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:onClick="play"
                android:src="@drawable/ply"></ImageView>

            <ImageView
                android:id="@+id/forwad"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:onClick="pause"
                android:src="@drawable/forward"></ImageView>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>